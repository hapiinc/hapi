block head
  link(rel='stylesheet', href='/stylesheets/cover.css')
block body
  .site-wrapper
    .site-wrapper-inner
      .cover-container
        .masthead.clearfix
          .inner
            h3.masthead-brand
              a(href='/')
                img(src='/images/hapi.logo.png', height='50em', width='122.5em')
            ul.nav.masthead-nav
              li.active
                a(href='/') Home
              if user === false
                li
                  a(href='/signup') Sign Up
                li
                  a(href='/login') Log In
              else
                li
                  a(href='/profile') Profile
                li
                  a(href='/logout') Log Out
        .inner.cover
          h1.cover-heading You must know this site better than us.
